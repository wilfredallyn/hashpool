[Unit]
Description=Hashpool Mint (CDK)
After=network.target

[Service]
Type=simple
User=hashpool
Group=hashpool
WorkingDirectory=/opt/hashpool
Environment="CDK_MINT_DB_PATH=/var/lib/hashpool/mint/mint.sqlite"
Environment="RUST_LOG=info"
ExecStartPre=+/bin/sh -c 'mkdir -p /var/log/hashpool /var/lib/hashpool/mint && chown hashpool:hashpool /var/log/hashpool /var/lib/hashpool && chmod 755 /var/log/hashpool /var/lib/hashpool /var/lib/hashpool/mint'
ExecStart=/opt/hashpool/bin/mint \
  -c /opt/hashpool/config/mint.config.toml \
  -g /opt/hashpool/config/shared/pool.toml \
  -f /var/log/hashpool/mint.log
StandardOutput=file:/var/log/hashpool/mint.log
StandardError=file:/var/log/hashpool/mint.log
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
